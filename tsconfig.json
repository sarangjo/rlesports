{
  "compilerOptions": {
    "outDir": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es5", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "./*.js", "react"]
}
